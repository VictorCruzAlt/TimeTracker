<resources>
    <color name="primary">#4B4A68</color>
    <color name="primary_transp">#B34B4A68</color>
    <color name="primary_dark">#373658</color>
    <color name="accent">#ffc400</color>
    <color name="text_primary">#fff</color>
    <color name="text_secondary">#fff</color>

    <!-- Base application theme. -->
    <style name="AppTheme2" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <!-- statusBar and actionBar color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
        <!-- The rest of your attributes -->
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary_dark</item>
        <item name="android:actionMenuTextColor">@color/text_primary</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>
</resources>
